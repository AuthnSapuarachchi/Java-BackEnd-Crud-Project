<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<welcome-file-list>
		<welcome-file>homepage.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>DisplayEventServlet</servlet-name>
		<servlet-class>sliit.eventmng.controller.DisplayEventServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DisplayEventServlet</servlet-name>
		<url-pattern>/event</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>HomeViewServlet</servlet-name>
		<servlet-class>sliit.eventmng.controller.HomeViewServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HomeViewServlet</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BookingFormServlet</servlet-name>
		<servlet-class>sliit.eventmng.controller.BookingFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookingFormServlet</servlet-name>
		<url-pattern>/bookingForm</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BookinginsertServlet</servlet-name>
		<servlet-class>sliit.eventmng.controller.BookinginsertServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookinginsertServlet</servlet-name>
		<url-pattern>/insertBooking</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BookingListServlet</servlet-name>
		<servlet-class>sliit.eventmng.controller.BookingListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookingListServlet</servlet-name>
		<url-pattern>/booking</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BookingEditServlet</servlet-name>
		<servlet-class>sliit.eventmng.controller.BookingEditServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookingEditServlet</servlet-name>
		<url-pattern>/editBooking</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>BookingDeleteServlet</servlet-name>
		<servlet-class>sliit.eventmng.controller.BookingDeleteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookingDeleteServlet</servlet-name>
		<url-pattern>/deleteBooking</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LoginViewServlet</servlet-name>
		<servlet-class>sliit.eventmng.controller.LoginViewServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginViewServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>sliit.eventmng.controller.LoginValidationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/loginform</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>RegisterViewServlet</servlet-name>
		<servlet-class>sliit.eventmng.controller.RegisterViewServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegisterViewServlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>sliit.eventmng.controller.RegisterServlet</servlet-class>
	</servlet>
<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/registerform</url-pattern>
	</servlet-mapping>

</web-app>
